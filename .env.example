# ==============================================
# WATER METER MONITORING - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: Never commit .env.local to git!

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Camera Configuration (Thingino/Wyze)
WATER_CAM_IP=10.10.10.207
WATER_CAM_USER=root
WATER_CAM_PASS=your_camera_password

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=utility_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# Grafana Dashboard
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_USER=your@email.com
GRAFANA_PASSWORD=your_grafana_password

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=your_secure_influxdb_password
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=ecoworks
INFLUXDB_BUCKET=utility_meters

# Monitoring Configuration
READING_INTERVAL=600  # seconds (10 minutes)

# Optional: MQTT Configuration
# MQTT_BROKER=localhost
# MQTT_PORT=1883
# MQTT_TOPIC=home/water/meter
